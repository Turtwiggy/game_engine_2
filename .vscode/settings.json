  // use this with msvc
  "cmake.cmakePath": "C:/Program Files/CMake/bin/cmake.exe",
  "cmake.ctestPath": "C:/Program Files/CMake/bin/ctest.exe",
  "cmake.cpackPath": "C:/Program Files/CMake/bin/cpack.exe",

  // use this with g++
  // "cmake.cmakePath": "C:/Software/msys64/ucrt64/bin/cmake.exe",
